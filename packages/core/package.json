{
  "name": "@rulesets/core",
  "version": "0.1.0",
  "private": false,
  "description": "Core library for Rulesets: parser, compiler, linter, and plugins.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "rulesets": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "bunx ultracite lint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "commander": "^12.0.0",
    "diff": "^5.2.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.19.31",
    "@types/json-schema": "^7.0.15",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
